    <script>
        // Simple bounce logic for the image
        const img = document.getElementById('bouncing-image');
        let x = 0, y = 0;
        let dx = 2, dy = 2;
        function bounce() {
            x += dx;
            y += dy;
            if (x + img.width > window.innerWidth || x < 0) dx = -dx;
            if (y + img.height > window.innerHeight || y < 0) dy = -dy;
            img.style.left = x + 'px';
            img.style.top = y + 'px';
            requestAnimationFrame(bounce);
        }
        bounce();
    </script>
